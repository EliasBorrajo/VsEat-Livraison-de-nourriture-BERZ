@model VSEatWebApp.Models.ClientVM

@{
    ViewData["Title"] = "Mon compte";
}

<h1>Modifier mon compte</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @{await Html.RenderPartialAsync("_UtilisateurBaseForm", new DetailedUtilisateurVM() { Nom = Model.Nom, Prenom = Model.Prenom, Mail = Model.Mail, Password = Model.Password, Telephone = Model.Telephone, AllLocalites = Model.AllLocalites });}
            <div class="form-group">
                <label asp-for="Telephone" class="control-label">Téléphone</label>
                <input asp-for="Telephone" class="form-control" />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adresse" class="control-label">Adresse</label>
                <input asp-for="Adresse" class="form-control" />
                <span asp-validation-for="Adresse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocaliteID" class="control-label">Localité</label><br />
                @Html.DropDownListFor(x => x.LocaliteID, new SelectList(Model.AllLocalites, "ID", "Nom"), new { @class = "form-control" })
                <span asp-validation-for="LocaliteID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Appliquer les modifications" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-danger" asp-action="Disable" asp-controller="Client">Désactiver mon compte</a>
</div>
<br />
<div>
    <a asp-action="Index" asp-controller="Home">Retour à l'accueil</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
