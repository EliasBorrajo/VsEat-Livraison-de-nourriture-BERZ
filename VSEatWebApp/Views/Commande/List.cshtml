@model IEnumerable<VSEatWebApp.Models.SimpleCommandeVM>

@{
    ViewData["Title"] = "List";
}

<h1>Commandes</h1>

<table>
    <tbody>
        <tr>
            <td>
                @Html.ActionLink("Commandes en cours", "List", "Commande", new { status = 1 }) |
                @Html.ActionLink("Commandes terminées", "List", "Commande", new { status = -1 }) |
                @Html.ActionLink("Toutes les commandes", "List", "Commande", new { status = 0 })
            </td>
        </tr>
    </tbody>
</table>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Commande.Heure)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Commande.HeureLivraison)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Commande.Client.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Commande.Client.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Commande.Staff.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Commande.Staff.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnCours)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Commande.Heure)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Commande.HeureLivraison)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Restaurant)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Commande.Client.Nom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Commande.Client.Prenom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Commande.Staff.Nom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Commande.Staff.Prenom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnCours)
                    </td>
                    <td>
                        @Html.ActionLink("Détail", "Detail", new { id = item.Commande.ID })
                    </td>
                    @if (item.EnCours)
                    {
                        <td>
                            @Html.ActionLink(Model.FirstOrDefault().Action, "Action", new { id = item.Commande.ID })
                        </td>
                    }
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" align="center">
                    Aucune commande correspondant à ces critères.
                </td>
            </tr>
        }
    </tbody>
</table>
