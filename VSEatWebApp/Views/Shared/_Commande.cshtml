@model VSEatWebApp.Models.BaseCommandeVM

<dl class="row">
    <dt class="col-sm-2">
        Numéro
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Commande.ID)
    </dd>
    <dt class="col-sm-2">
        Heure de la commande
    </dt>
    <dd class="col-sm-10">
        @(Model.Commande.Heure.ToString(ViewData["DateTimeFormat"].ToString()))
    </dd>
    <dt class="col-sm-2">
        Heure de livraison
    </dt>
    <dd class="col-sm-10">
        @(Model.Commande.HeureLivraison.ToString(ViewData["DateTimeFormat"].ToString()))
    </dd>
    @if (!Model.EnCours && !Model.Commande.Annule)
    {
        <dt class="col-sm-2">
            Heure de paiement
        </dt>
        <dd class="col-sm-10">
            @(Model.Commande.HeurePaiement.ToString(ViewData["DateTimeFormat"].ToString()))
        </dd>
    }
    <dt class="col-sm-2">
        Restaurant
    </dt>
    <dd class="col-sm-10">
        @Model.Restaurant.Nom
    </dd>
    @for (int i = 0; i < Model.Commande.Plats.Length; i++)
    {
        <dt class="col-sm-2">
            @if (i == 0)
            {
                @("Plats")
            }
        </dt>
        <dd class="col-sm-10">
            @($"{Model.Commande.Plats[i].Nom} ({Model.Commande.Plats[i].Quantite}x)")
        </dd>
    }
    <dt class="col-sm-2">
        Total
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Commande.Somme)
    </dd>
</dl>